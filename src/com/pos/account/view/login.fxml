<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.account.controller.LoginController">
   <children>
      <TitledPane alignment="CENTER" collapsible="false" contentDisplay="CENTER" prefHeight="250.0" prefWidth="279.0" text="LOGIN" textAlignment="JUSTIFY" textFill="#656262">
         <font>
            <Font name="Lucida Sans Unicode" size="12.0" />
         </font>
         <content>
            <AnchorPane prefHeight="248.0" prefWidth="277.0">
               <children>
                  <TextField fx:id="usernameBtn" layoutX="37.0" layoutY="25.0" prefHeight="33.0" prefWidth="203.0" promptText="Username">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="passwordBtn" layoutX="36.0" layoutY="69.0" prefHeight="33.0" prefWidth="205.0" promptText="Password">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <Hyperlink alignment="CENTER" contentDisplay="CENTER" layoutX="36.0" layoutY="111.0" prefHeight="30.0" prefWidth="203.0" text="Forgot Password?">
                     <font>
                        <Font name="Lucida Sans Unicode" size="12.0" />
                     </font>
                  </Hyperlink>
                  <Button fx:id="signinBtn" layoutX="90.0" layoutY="151.0" mnemonicParsing="false" onAction="#signIn" prefHeight="32.0" prefWidth="98.0" text="Sign In">
                     <font>
                        <Font name="Lucida Sans Unicode" size="14.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
         </content>
      </TitledPane>
   </children>
</AnchorPane>
